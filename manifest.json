{
	"manifest_version": 2,
	"name": "Svelte Vite Extension",
	"version": "1.0",
	"description": "A simple browser extension built with Svelte and Vite",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"webNavigation"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_popup": "index.html"
	}
}